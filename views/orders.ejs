<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="../styles/home-style.css">
        <link rel="stylesheet" href="../styles/navbar-style.css">
    </head>
    <body>
        <header>
        <nav class="navigation">
          <a href="home" class="brand-name">Watch zone</a>
            <button class="hamburger">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="white">
                <path
                  fillRule="evenodd"
                  d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                  clipRule="evenodd"
                />
              </svg>
            </button>
            <div class="navigation-menu">
              <ul>
                <li>
                    Welcome, <span id="userName"></span>
                </li>
                <li>
                    <a href="orders">My Orders</a>
                </li>
                <li>
                  <a href="/cart">
                    <img src="../images/shopping-cart.png" alt="Shopping-cart" height="24" width="24"/>
                  </a>
                  <span id="cart_count"></span>
                </li>
                <li>
                  <div onclick="logOut()">
                    <img src="../images/logout.png" alt="logout" height="24" width="24"/>
                  </div>
                </li>
              </ul>
            </div>
          </nav>
        </header>
        <main>

           <div class="container">

            <% for ( var i=0; i< orders.length; i++) { %>
                <div class="order__container">
                    <div class="order__header">
                        <div>
                            <b>
                                Order placed
                            </b>
                            <div>
                                <%= orders[i].createdAt%>
                            </div>
                            
                        </div>
                        <div>
                            <div>
                                Total
                            </div>
                            <div>
                                $ <%= orders[i].amount%>

                            </div>
                        </div>
                    </div>
                    <div style="padding: 8px;">
                        <span style="text-transform: capitalize;"><%= orders[i].status%></span>
                        <div>
                            <span><%= orders[i].address.city%>,<%= orders[i].address.state%></span>
                        </div>

                        <div id="cart_items" >
                            <% for ( var j=0; j< orders[i].products.length; j++) { %>
                                <div class="cart-item__container">
                                    <div>
                                        <img src=<%= orders[i].products[j].img%> alt="logo" class="cart-brand-logo">
                                    </div>
                                    <div class="cart_details">
                                        <%= orders[i].products[j].title%>
                                        <div>$<%= orders[i].products[j].price%></div>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                    </div>
                </div>


                <% } %>

           </div>    
                
           
        </main>

        </body>
</html>
